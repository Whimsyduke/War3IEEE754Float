<Window x:Class="War3IEEE754Float.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:War3IEEE754Float"
        mc:Ignorable="d"
        Title="MainWindow" Height="70" Width="510" MaxHeight="70" MaxWidth="510" MinHeight="70" MinWidth="510" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Name="LableHexValue" Grid.Column="0" Content="Hex:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <TextBox Name="TextBoxHexValue" Grid.Column="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="5" TextChanged="TextBoxHexValue_TextChanged"/>
        <Label Name="LableFloatValue" Grid.Column="2" Content="Float:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <TextBox Name="TextBoxFloatValue" Grid.Column="3" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="5" TextChanged="TextBoxFloatValue_TextChanged"/>
    </Grid>
</Window>
